#!/bin/sh

GHOSTDIR=$1 ; shift
error=no

X=0
Y=0

while getopts x:y: OPT ; do
  case $OPT in
    x) X=$OPTARG ;;
    y) Y=$OPTARG ;;
    ?) error=yes ;;
  esac
done

[[ $error = yes ]] && exit 1

mkdir -p     "$GHOSTDIR"          && \
mkfifo       "$GHOSTDIR"/view     && \
cat << YML > "$GHOSTDIR"/meta.yml
x: $X
y: $Y
YML